---
import { Footer } from '../components/footer/footer';
import { Navbar } from '../components/navbar/navbar';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta
            http-equiv='X-UA-Compatible'
            content='IE=edge'
        />
        <meta
            name='viewport'
            content='width=device-width, initial-scale=1.0'
        />
        <meta property="og:title" content="Jordan Gopie - Software Dev"/>
        <meta property="og:type" content="website"/>
        <meta property="og:url" content="https://www.jgopie.com"/>
        <meta property="og:image" content="https://avatars.githubusercontent.com/u/8053192?s=400&u=8c6e231070c1e1b78f13f94bc26a4b67432e90c3&v=4"/>
        <meta property="og:description" content="Software Developer with a focus on Web Development and an interest in all things tech."/>
        <title>{title}</title>
        <link href="https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,400&display=swap" rel="stylesheet">
        <style>
            *{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body{
                font-family: 'Satoshi', sans-serif;
                color: white;
                background-color: black;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                align-items: center;
                height: 100vh;
                margin-left: 5%;
                margin-right: 5%;
            }
        </style>
    </head>
    <body>
        <Navbar client:load/>
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
